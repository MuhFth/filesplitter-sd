import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.Scanner;

public class FileSplitter {

    public static void main(String[] args) throws IOException {
        // Input file
        Scanner input = new Scanner(System.in);
        System.out.print("Masukkan nama file input: ");
        String inputFile = input.nextLine();

        // Output file
        System.out.print("Masukkan nama file output: ");
        String outputFile = input.nextLine();

        // Ukuran file per bagian
        System.out.print("Masukkan ukuran file per bagian (dalam byte): ");
        int chunkSize = Integer.parseInt(input.nextLine());

        // Split file
        FileInputStream inputStream = new FileInputStream(inputFile);
        byte[] bytes = new byte[chunkSize];
        int bytesRead;

        int chunkNumber = 1;
        while ((bytesRead = inputStream.read(bytes)) != -1) {
            // Buat file baru
            FileOutputStream outputStream = new FileOutputStream(outputFile + ".part" + chunkNumber);

            // Tulis data ke file
            outputStream.write(bytes, 0, bytesRead);

            // Tutup file
            outputStream.close();

            chunkNumber++;
        }

        // Join file
        File[] chunkFiles = new File[chunkNumber];
        for (int i = 1; i <= chunkNumber; i++) {
            chunkFiles[i - 1] = new File(outputFile + ".part" + i);
        }

        FileOutputStream outputStream = new FileOutputStream(outputFile);
        for (File chunkFile : chunkFiles) {
            FileInputStream inputStream1 = new FileInputStream(chunkFile);
            byte[] bytes1 = new byte[chunkSize];
            int bytesRead1;

            while ((bytesRead1 = inputStream1.read(bytes1)) != -1) {
                outputStream.write(bytes1, 0, bytesRead1);
            }

            inputStream1.close();
        }

        outputStream.close();
    }
}

